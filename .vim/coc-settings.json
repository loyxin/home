{
	"suggest.labelMaxLength": 50,
	"http.proxyStrictSSL": false,
	"suggest.defaultSortMethod": "none",
	"markdown-preview-enhanced.enableScriptExecution": true,
	"languageserver": {
		"ccls": {
			"command": "/usr/bin/ccls",
			"filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
			"rootPatterns": [".ccls-root", "compile_commands.json", ".git"],
			"disableDiagnostics" : true,
			"initializationOptions": {
				"cache": {
					"directory": ".vscode/.ccls-cache"
				},
				"client": {
					"snippetSupport": true
				},
				"highlight": {
					"lsRanges": true
				},
				"index.threads": 16,
				"linters": {
					"cppcheck": {
						"command": "~/program/install/bin/cppcheck"
					}
				}
			}
		},
		"cmake": {
			"command": "cmake-language-server",
			"filetypes": ["cmake"],
			"rootPatterns": [
				"build_root/"
			],
			"initializationOptions": {
				"buildDirectory": "build_root"
			}
		},
		"bash": {
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"],
			"ignoredRootPaths": ["~"]
		}
	},
	"clangd": {
		"filetypes": ["c", "cpp", "cuda", "objc", "objcpp"],
		"arguments": [
			"--background-index",
			"--compile-commands-dir=build_root",
			"--enable-config",
			"-j=12",
			"--clang-tidy",
			"--clang-tidy-checks=performance-*,bugprone-*,boost-*,google-*,modernize-*,readability-*"
		],
		"semanticHighlighting": true,
		"disableDiagnostics": false,
		"disableCompletion": true,
		"disableSnippetCompletion": true
	},
	"coc.preferences.semanticTokensHighlights": false,
	"cmake.lsp.enable": true,
	"cmake.lsp.serverPath": "~/.local/bin/cmake-language-server",
	"cmake.lsp.buildDirectory": "build_root",
	"cmake.formatter": "~/.local/bin/cmake-format",

	"diagnostic-languageserver.filetypes": {
		"vim": "vint",
		"sh": "shellcheck",
		"cmake": ["cmake-lint", "cmakelint"],
		"cpp": ["cpplint", "cppcheck"]
	},
	"diagnostic-languageserver.formatFiletypes": {
		"sh": "shfmt",
		"cmake": "cmake-format",
	}

}
